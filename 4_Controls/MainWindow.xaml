<Window x:Class="_4_Controls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Columns="4">
        <Border Background="Aqua" Padding="10">
            <Button Background="Red" FontSize="25">Hello</Button>
        </Border>
        
        <Button Background="#FFFDFF00" Margin="5,10,12,14"></Button>
        <Button Background="#FF0090FF" BorderThickness="6" BorderBrush="Pink"></Button>

        
        <Border Background="#FF4EFF00" CornerRadius="15">
            <Button Margin="5" Background="Purple"></Button>
        </Border>
    </UniformGrid>
</Window>
