<Window x:Class="_5_ProgressBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5_ProgressBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <ProgressBar Name="ProgressBar" Height="40" Margin="10" Maximum="100" Minimum="0" Value="35" Width="600"></ProgressBar>
        <ProgressBar Height="40" Margin="10" IsIndeterminate="True" Foreground="Red" Width="600" Maximum="100" Minimum="0" ></ProgressBar>
        <Button Margin="10" Width="300" FontSize="50" Click="Button_Click">Start</Button>
        <Button Margin="10" Width="300" FontSize="50" Click="Button_Click_1">Stop</Button>
    </StackPanel>
</Window>
