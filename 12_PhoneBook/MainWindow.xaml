                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>-->
            </ListBox>
            <GridSplitter HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Width="2" Grid.Column="1"></GridSplitter>
            <StackPanel Grid.Column="2" Background="#FF4F7694">
                <Label HorizontalAlignment="Center">Name</Label>
                <TextBox Name="nameTextBox" Text="{Binding SelectedPhoneBook.Name, UpdateSourceTrigger=PropertyChanged}" Margin="20,0"></TextBox>
                <Label HorizontalAlignment="Center">Surname</Label>
                <TextBox Name="surnameTextBox" Text="{Binding SelectedPhoneBook.Surname, UpdateSourceTrigger=PropertyChanged }" Margin="20,0"></TextBox>
                <Label HorizontalAlignment="Center">Age</Label>
                <TextBox Name="ageTextBox" Text="{Binding SelectedPhoneBook.Age, UpdateSourceTrigger=PropertyChanged}" Margin="20,0"></TextBox>
                <Label HorizontalAlignment="Center">Phone</Label>
                <TextBox Name="phoneTextBox" Text="{Binding SelectedPhoneBook.Phone, UpdateSourceTrigger=PropertyChanged}"  Margin="20,0"></TextBox>
                <Label HorizontalAlignment="Left" Margin="20,0">Is Male:</Label>
                <CheckBox IsChecked="{Binding SelectedPhoneBook.IsMale, UpdateSourceTrigger=PropertyChanged}"  Margin="20,0"></CheckBox>
                <Button Command="{Binding DublicateCommandCmd}" Background="#FF7EC97E" Margin="20,20,20,5">Create Contact Copy</Button>
                <Button Command="{Binding RemoveCommandCmd}" Background="PaleVioletRed" Margin="20,0">Delete Selected Contact</Button>
                <Button Command="{Binding AddCommandCmd}" Background="#FF7EC97E" Margin="20,20,20,0">Create New Contact</Button>
                <Button Command="{Binding ClearCommandCmd}" Background="PaleVioletRed" Margin="20,5">Delete All Contact</Button>
                <Border>
                    <Border.Background>
                        <SolidColorBrush ></SolidColorBrush>
                    </Border.Background>
                </Border>

            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
