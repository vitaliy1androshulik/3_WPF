<Window x:Class="_12_PhoneBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12_PhoneBook"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Command="{Binding DublicateCommandCmd}" Modifiers="Ctrl" Key="D"></KeyBinding>
        <KeyBinding Command="{Binding AddCommandCmd}" Modifiers="Ctrl" Key="N"></KeyBinding>
        <KeyBinding Command="{Binding RemoveCommandCmd}" Key="Delete"></KeyBinding>
        <KeyBinding Command="{Binding ClearCommandCmd}" Modifiers="Ctrl" Key="W"></KeyBinding>
    </Window.InputBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Edit">
                <MenuItem Header="Dublicate" Command="{Binding DublicateCommandCmd}" InputGestureText="Ctrl+D"></MenuItem>
                <MenuItem Header="Add New Contact" Command="{Binding AddCommandCmd}" InputGestureText="Ctrl+N"></MenuItem>
                <MenuItem Header="Remove" Command="{Binding RemoveCommandCmd}"  InputGestureText="Del"></MenuItem>
                <MenuItem Header="Clear" Command="{Binding ClearCommandCmd}"  InputGestureText="Ctrl+W"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100" Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition MinWidth="100" Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox Name="contactListBox"               
                     Grid.Column="0" Background="#FF92CEE9"
                     HorizontalContentAlignment="Stretch"
                     DisplayMemberPath="FullName"
                     SelectedItem="{Binding SelectedPhoneBook}"
                     ItemsSource="{Binding Path=PhoneBooks}">
