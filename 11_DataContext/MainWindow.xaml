<Window x:Class="_11_DataContext.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_11_DataContext"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock FontSize="25" Padding="10" TextAlignment="Center" Grid.ColumnSpan="2" >
            Hello dear, <Run Text="{Binding Path=User.Name}"></Run>
            </TextBlock>
            <TextBlock Grid.Row="1" FontSize="25" Padding="10" TextAlignment="Center" Grid.ColumnSpan="2" >
            Email: <Run Text="{Binding Path=User.Email}"></Run></TextBlock>
            <Label Grid.Row="2" Grid.Column="0" Padding="10" FontSize="20" >Name :</Label>
            <TextBox Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" Margin="5" Padding="10" Text="{Binding Path=User.Name, UpdateSourceTrigger=PropertyChanged}" Name="nameTextBox" ></TextBox>
            <Label Grid.Row="3" Grid.Column="0" Padding="10" FontSize="20">Email :</Label>
            <TextBox Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" Margin="5" Padding="10" Text="{Binding Path=User.Email, UpdateSourceTrigger=PropertyChanged}" ></TextBox>
            
            
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock FontSize="25" Padding="10" TextAlignment="Center" Grid.ColumnSpan="2" >
     Hello dear, <Run Text="{Binding Path=User2.Name}"></Run>
            </TextBlock>
            <TextBlock Grid.Row="1" FontSize="25" Padding="10" TextAlignment="Center" Grid.ColumnSpan="2" >
     Email: <Run Text="{Binding Path=User2.Email}"></Run></TextBlock>
            <Label Grid.Row="2" Grid.Column="0" Padding="10" FontSize="20" >Name :</Label>
            <TextBox Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" Margin="5" Padding="10" Text="{Binding Path=User2.Name, UpdateSourceTrigger=PropertyChanged}" Name="nameTextBox1" ></TextBox>
            <Label Grid.Row="3" Grid.Column="0" Padding="10" FontSize="20">Email :</Label>
            <TextBox Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" Margin="5" Padding="10" Text="{Binding Path=User2.Email, UpdateSourceTrigger=PropertyChanged}" ></TextBox>


        </Grid>


    </StackPanel>
</Window>
