<Window x:Class="_10_DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10_DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Margin="10">Value : </Label>
        <TextBox Name="textBox"></TextBox>
        <Label Margin="10">Value : </Label>
        <ProgressBar Value="{Binding ElementName=textBox, Path=Text}" Height="20"></ProgressBar>
        <TextBlock Margin="10">Slide Value : <Run Text="{Binding ElementName=slider, Path=Value}"></Run></TextBlock>
        <Slider Margin="10" Name="slider"></Slider>

        <TextBox Name="textBox2" Text="{Binding ElementName=slider, Path=Value, Mode=OneWayToSource, 
            UpdateSourceTrigger=LostFocus}"></TextBox>
        <CheckBox Margin="10" IsChecked="{Binding ElementName=slider, Path=IsEnabled}">Slider Disable</CheckBox>
        <!--Mode default value :
        User-editAble control : TwoWay
        Others : OneWay
        -->
        <!--UpdateSourceTrigger default value :
        Text Controls : LostFocus
        Others : PropertyChanged
        -->
    </StackPanel>
</Window>
