<Window x:Class="_13_ExamTableShulte.Table"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_13_ExamTableShulte"
        mc:Ignorable="d"
        Title="Table" Height="450" Width="800">
    <DockPanel LastChildFill="True">

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem DockPanel.Dock="Right">
                <ProgressBar Name="progressBar" Width="100" Height="15"></ProgressBar>
            </StatusBarItem>
            <StatusBarItem DockPanel.Dock="Right">
                <Label >Progress:</Label>
            </StatusBarItem>
            <StatusBarItem DockPanel.Dock="Left">
                <Label>Time :</Label>
            </StatusBarItem>
            <StatusBarItem DockPanel.Dock="Left">
                <Label Name="TimeLabel">0</Label>
            </StatusBarItem>
            <StatusBarItem DockPanel.Dock="Left">
                <Label >sec.</Label>
            </StatusBarItem>
        </StatusBar>
        <UniformGrid HorizontalAlignment="Stretch" Name="TableGrid" DockPanel.Dock="Top">
        </UniformGrid>
    </DockPanel>
</Window>
